<%= render 'navigation', :name => @brand.name, :path => brand_path(@brand) %>

<div class="new_form">
  <%= form_for [@brand, @campaign] do |f| %>  
  <ul>
    <li><%= f.text_field :name, :placeholder => 'Name' %></li>
    <li><%= f.text_field :drop_date, :placeholder => 'Drop Date' %></li>
  </ul>
  <ul>
    <li><%= f.text_field :suppressions, :placeholder => 'Suppressions' %></li>
    <li><%= f.text_field :data_file, :placeholder => 'Data File' %></li>
    <li><%= f.submit 'Add' %></li>
  </ul>
  <% end %>
</div>
<div id="dst" class="audiences">
  
    <div id="header">
      <h1>Audiences</h1>
      <h2><%= link_to '&larr; '.html_safe + @brand.name, brand_path(@brand) %></h2>
    </div>

    <div id="new">
      <%= link_to 'Add Audience', new_brand_audience_path(@brand) %>
    </div>

    <% i = 0; @brand.audiences.each do |audience| %>
    <div class="record deletable <%= i.even? ? 'light' : 'dark' %>">
      <%= button_to 'X', brand_audience_path(@brand, audience), :method => :delete, :class => 'delete' %>
      <%= audience.code %>
    </div> 
    <% i += 1; end %>
  
</div><!-- /#dst, .audiences -->


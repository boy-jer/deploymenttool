<div id="dst" class="brand">

  <% @campaigns = @brand.campaigns.find(:all, :conditions => ["drop_date >= ?", DateTime.now], :order => 'drop_date ASC') %>

  <%= render 'shared/navigation_bar', :local => @brand %>

  <%= render 'header', :brand => @brand %>

  <div class='stage'>
    <% if @campaigns.size == 0 %>
      <%= render 'empty' %>
    <% else %>
      <% i = 0; @campaigns.each do |campaign| %>
        <%= render 'campaign_record', :campaign => campaign %>
      <% i += 1; end %>
    <% end %>
  </div>

</div><!-- /#dst, .brand -->
<% content_for :column_headers do %>
  <% column_names = ['Treatment', 'Creative', 'Subject Line', 'From', 'Drop Date & Time'] %>
  <% column_names.each do |n| %>
    <td style="padding:10px;color:#fff;text-align:center;border-bottom:5px solid <%= @campaign.brand.darken_color(@campaign.brand.color) %>;font-size:12px;font-weight:bold;background:#<%= @campaign.brand.color %>"><%= n %></td>
  <% end %>
<% end %>

<% @campaign.versions.each do |version| %>
  <table cellpadding="0" cellspacing="0" width="100%"  style="margin-top:25px;text-align:center;border-bottom:1px solid silver;">
    <%= render table 'table_head' %>
    <tr style="height:100px">
      <td style="padding:10px; width:200px; font-size:11px;">
        <b><%= version.audience_list %></b>
        <br/><br/>
        <%= @campaign.treatment_name %>
      </td>
      <td style="padding:10px; font-size:11px;"><%= version.creative %></td>
      <td style="padding:10px; font-size:11px;"><%= version.subject_line %></td>
      <td style="padding:10px; font-size:11px;"><%= version.from %></td>
      <td style="padding:10px; font-size:11px;"><%= @campaign.get_drop_date_as :full_drop_date %></td>
    </tr>
  </table>
  <%= render 'campaign_mailer/generated_by_et' %>
<% end %>